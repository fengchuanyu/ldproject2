<view class="form-bar">
  <view>
   <input value="{{inpVal}}" bindinput="inpHandle" placeholder="请输入待办事项"></input>
  </view>
  <button bindtap="addHandle">add</button>
</view>
<!-- 列表区域 -->
<view class="list-bar">
  <view 
  wx:for="{{todoList}}"
  wx:key="index"
  class="list-item {{item.isCheck?'active':''}}" 
  bindtap="checkHandle"
  data-id="{{item.id}}"
  >
    <view class="item-chekbox">
      <checkbox checked="{{item.isCheck}}"/>
    </view>
    <view class="item-title">
      {{item.title}}
    </view>
    <view class="item-btn">
      <button size="mini" type="warn" data-id="{{item.id}}" bindtap="doneHandle">完成</button>
    </view>
  </view>
</view>
<button size="mini" type="warn" bindtap="doneCheckHandle">完成选中</button>
